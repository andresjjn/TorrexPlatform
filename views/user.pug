extends ./layout/index

block content
    main.container.mt-5
        h1=page
        .row.justify-content-center.col.md-5
            img(src="https://www.hrdconnect.com/wp-content/uploads/2018/09/remote-working1.jpg", alt="", class="userImg")
        .row
            .row.justify-content-center.col
                .col-md-8
                    form(action=`/user/` method="POST")
                        .form-group
                            input#username(type="text", placeholder="Your genoma username", name="username", class="form-control")
                        input.btn.btn-success.btn-block(type="submit")
                    p=status